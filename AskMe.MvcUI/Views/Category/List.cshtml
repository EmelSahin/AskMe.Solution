@using AskMe.Entities.Model
@model List<Category>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kategori Listesi</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/home/index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kategori Listesi</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">



        <!-- /.row bizim-->
        <div class="row">
            <div class="col-12">
                <div class="card category-list">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Tablosu</h3>

                        <div class="card-tools">
                            <a href="/category/create" class="btn btn-primary">Ekle</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-head-fixed table-hover table-striped text-nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Kategori Adı</th>
                                    <th>Açıklama</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>#@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a href="/category/edit/@item.Id" class="btn btn-warning">Guncelle</a>
                                            <button class="btn btn-danger modal-delete-open"
                                                    data-id="@item.Id"
                                                    data-name="@item.Name"
                                                    data-description="@item.Description">
                                                Sil
                                            </button>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->


    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->


<div class="modal fade" id="modal-default-delete" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Default Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <input type="hidden" id="kullanici-sil-id" value="">
            <div class="modal-body">
                <div class="form-group">
                    <h4 class="text-danger text-center">User silmek istediğinize emin misiniz?</h4>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" class="form-control" id="user-modal-name" placeholder="adı" disabled>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Description</label>
                    <input type="text" class="form-control" id="user-modal-desc" placeholder="desc" disabled>
                </div>

            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary user-modal-delete">Sil</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>